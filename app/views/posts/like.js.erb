// A partial for JS that highlights the like icon when it has been clicked by adding
// an 'active' class dynamically
// Passing in post id from controller as a way to select the like
<% if @success == true %>
$(".like-<%= @post_id %>").addClass("active");
<% else %>
$(".like-<%= @post_id %>").removeClass("active");
<% end %>
// Remember, dot to select class hash to select id
// Passing in updated value of post likes here (must be outside conditional)
$("#post-<%= @post_id %>-likes").text("<%= @post_likes %> likes");